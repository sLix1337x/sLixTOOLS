# Environment Variables for GIF Maker (sLixTOOLS)

# Application
VITE_APP_NAME=sLixTOOLS
VITE_APP_DESCRIPTION=Free online tools for video and GIF conversion

# File Upload Limits
VITE_MAX_FILE_SIZE=104857600  # 100MB in bytes
VITE_ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/ogg
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# GIF Conversion Settings
VITE_DEFAULT_FPS=15
VITE_DEFAULT_QUALITY=80
VITE_MAX_GIF_DURATION=30  # seconds
VITE_GIF_WORKER_PATH=/workers/gif.worker.js

# Feature Flags
VITE_ENABLE_3D_SCENE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# External Services (if needed in future)
# VITE_API_URL=
# VITE_CDN_URL=
